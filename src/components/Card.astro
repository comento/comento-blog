---
import { Post } from "src/pages/posts.astro";
type Props = {
	post: Post;
	class: string;
};

const { post, class: className } = Astro.props;
---

<article
	class="rounded-lg overflow-hidden shadow hover:shadow-lg transition-shadow"
	class:list={className}
>
	<a class="flex flex-col h-full" href={`/post/${post.slug}`}>
		<img class="aspect-video" src={post.feature_image} alt={post.title} />
		<div class="bg-white p-5 flex-grow">
			{
				post.tags.length > 0 && (
					<div class="text-primary text-[10px] font-semibold h-5">
						{post.tags[0].name.toUpperCase()}
					</div>
				)
			}
			<h2 class="font-bold line-clamp-2">{post.title}</h2>
			<p class="mt-1 text-ellipsis text-sm text-gray-600 line-clamp-4">
				{post.excerpt}
			</p>
		</div>
		<footer
			class="bg-white px-5 text-xs font-semibold h-10 flex items-center border-t border-t-slate-100"
		>
			더 읽기
		</footer>
	</a>
</article>
