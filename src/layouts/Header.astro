---
import linkIcon from "@icons/arrow-top-right-on-square.svg";
---

<header
    class="border-b h-[52px] sm:h-[68px] box-content bg-white px-4 sticky top-0"
>
    <div class="gap-6 lg:w-[1140px] m-auto h-full">
        <div class="flex items-center gap-6 h-full">
            <a href="/">
                <img
                    class="max-w-none"
                    src="https://cdn.comento.kr/images/logo/logo-comento-typo-type.svg"
                    width="105"
                    height="18"
                />
            </a>
            <ul class="flex items-center h-full gap-6">
                <li
                    class="text-sm text-gray-800 hover:text-blue-600 flex-shrink-0"
                >
                    <a href="/">블로그</a>
                </li>
                <li
                    class="text-sm text-gray-800 hover:text-blue-600 flex-shrink-0"
                >
                    <a
                        class="flex gap-1"
                        href="https://www.notion.so/comento/23adb41a65d34ca383d23f049f7b55b9"
                        target="_blank"
                    >
                        채용
                        <img class="w-4" src={linkIcon} />
                    </a>
                </li>
            </ul>
        </div>
    </div>
</header>
