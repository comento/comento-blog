---
import Icon from "@components/Icon.astro";
import { RECRUIT_URL } from "src/constants";

const { pathname } = Astro.url;
---

<header
  class="border-b h-[52px] sm:h-[68px] box-content bg-white px-4 sticky top-0"
>
  <div class="gap-6 lg:w-[1140px] m-auto h-full">
    <div class="flex items-center gap-6 h-full">
      <a href="/" aria-label="코멘토 개발팀 블로그 홈으로 가기">
        <img
          class="max-w-none"
          src="https://cdn.comento.kr/images/logo/logo-comento-typo-type.svg"
          width="105"
          height="18"
          alt="코멘토 로고"
        />
      </a>
      <ul class="flex items-center h-full gap-6">
        <li
          class="text-sm hover:text-blue-600 flex-shrink-0"
          class:list={[
            {
              "text-blue-600": pathname === "/",
              "text-gray-800": pathname !== "/",
            },
          ]}
        >
          <a href="/">블로그</a>
        </li>
        <li class="text-sm text-gray-800 hover:text-blue-600 flex-shrink-0">
          <a class="flex gap-1" href={RECRUIT_URL} target="_blank">
            채용
            <Icon name="arrow-top-right-on-square" />
          </a>
        </li>
      </ul>
    </div>
  </div>
</header>
